<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.8.0" method="upgrade">
	<name>jUpgradePro</name>
	<author>Matias Aguirre</author>
	<authorEmail>maguirre@matware.com.ar</authorEmail>
	<authorUrl>http://www.matware.com.ar</authorUrl>
	<copyright>Copyright 2006 - 2018 Matias Aguirre. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<creationDate>2012-08-30</creationDate>
	<version>3.8.0</version>
	<description></description>

	<install>
		<sql>
			<file charset="utf8" driver="mysql">sql/mysql/install.sql</file>
			<file charset="utf8" driver="postgresql">sql/postgresql/install.sql</file>
		</sql>
	</install>

	<media destination="com_jupgradepro" folder="media/com_jupgradepro">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>json</folder>
	</media>

	<administration>
		<menu img="components/com_jupgradepro/images/jupgradepro.png">COM_JUPGRADEPRO</menu>

		<files folder="admin">
			<folder>controllers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>sql</folder>
			<folder>vendor</folder>
			<folder>views</folder>

			<filename>jupgradepro.php</filename>
			<filename>config.xml</filename>
			<filename>access.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>composer.json</filename>
		</files>

		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_jupgradepro.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_jupgradepro.sys.ini</language>
			<language tag="es-ES">language/es-ES/es-ES.com_jupgradepro.ini</language>
			<language tag="es-ES">language/es-ES/es-ES.com_jupgradepro.sys.ini</language>
			<language tag="fr-FR">language/fr-FR/fr-FR.com_jupgradepro.ini</language>
			<language tag="fr-FR">language/fr-FR/fr-FR.com_jupgradepro.sys.ini</language>
			<language tag="nl-NL">language/nl-NL/nl-NL.com_jupgradepro.ini</language>
			<language tag="nl-NL">language/nl-NL/nl-NL.com_jupgradepro.sys.ini</language>
		</languages>
	</administration>

</extension>
